datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Kanban Board Models

model Epic {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime?
  status      String    @default("TODO")  // TODO, DOING, REVIEW, DONE
  epicId      Int?      // null = Backlog
  epic        Epic?     @relation(fields: [epicId], references: [id], onDelete: SetNull)
  order       Float     @default(0)  // for ordering within status
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@index([epicId])
}
